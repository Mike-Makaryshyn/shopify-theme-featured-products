body {
   background-color: {{ settings.bg }};
   padding: 0;
   margin: 0;
   width: 100%;
   height: 100%;
   color: {{ settings.text_color }};
   font-family: Arial;
}

*, *::before, *:after {
   box-sizing: border-box;
}

.header-li {
  list-style-type: none; 
  font-size: 16px;
  line-height: 42px;
  margin: 0px 10px;
}

.header-li a {
  color: #000;
  font-weight: 600;
  transition: all .3s ease;
}

.header-li a:hover {
  color: teal;
}

.container {
   max-width: 1080px;
   margin: 0 auto;
}

.main-img {
   display: block;
   width: 60%;
   margin:  50px auto;
   border-radius: 20px;
   objective-fit: cover;
}

.success_msg {
   display: inline-block;
   position: fixed;
   bottom: 20px;
   right: 20px;
   font-weight: 600;
   border-radius: 20px;
   color: #fff;
   padding: 15px 20px;
   background: teal;
   transition: all 0.3s ease;
}

.default-btn {
   background-color: #464B90;
   padding: 20px 80px;
   border: none;
   transition: all .3s ease;
   color: #fff;
   border-radius: 40px;
   cursor: pointer;
   font-size: 16px;
}

.shop-title {
   padding: 5px 15px;
   border-radius: 10px;
   color: white;
   background: linear-gradient(to right, #005BBB, #FCD116);
}

.featured-title {
   margin: 80px 0px 60px 0px;
   font-size: 42px;
   line-height: 42px;
}

.product-title {
     line-height: 42px;
}

.default-btn:hover {
   background-color: #6762a6;
   box-shadow: rgba(0, 0, 0, 0.15) 0px 15px 25px, rgba(0, 0, 0, 0.05) 0px 5px 10px;
}

#shopify-section-featured-products {
   text-align: center;
}

.featured-products {
   display: grid;
   grid-template-columns: 1fr 1fr;
   justify-content: center;
}

.single-product {
   margin-bottom: 60px;
}

.dicount {
  margin-left: 10px;
  border-radius: 40px;
  color: #EB5757;
  font-size: 16px;
  font-weight: 500;
  padding: 12px 15px;
  background: rgba(235, 87, 87, 0.2);
}

.variant-select {
  border: 1px solid #ccc;
  border-radius: 40px;
  color: #464B90;
  font-size: 16px;
  padding: 10px 30px 10px 10px;
  cursor: pointer;
  background: rgba(70, 75, 144, 0.2);
   appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;

  background-image: url('{{'arrow.png' | asset_url}}');
  background-repeat: no-repeat;
  background-position: 80% center;
  background-size: 12px 6px;
  border: 1px solid #ccc;
}

.hide {
   display: none;
}

.variant-select:focus {
  outline: none;
  border-color: #0070c9;
}

.add_to_cart {
  white-space: nowrap;
  display: block;
  margin: 0px auto;
}

.add_to_cart_wrapper {
   width: 100%;
   margin-top: 30px;
}

{% comment %} MEDIA QUERIES {% endcomment %}

@media (max-width: 1200px) {
  .featured-products img {
      width: 450px;
   }
   .container {
      max-width: 1000px;
   }
}

@media (max-width: 1024px) {
  .featured-products {
    grid-template-columns: repeat(1, 1fr);
  }

  .featured-products img {
      width: 100%;
   }
   .shop-title {
      margin-left: 20px;
   }
   header {
      flex-direction: column;
   }
   header a,
   .default-btn,
   input {
      font-size: 25px;
   }

   body {
      font-size: 30px;
   }

   .variant-select,
   .dicount {
      font-size: 20px;
   }

   .featured-title {
      font-size: 65px;
   }
}
